extends layout
block title
	title Example
block body
	.container
		a Films:
		ul
			each titles in films
				li= titles.title
	.container
		a Cities
		ul
			each city in cities
				li= city.city
	.container
		a Dates of sessions
		ul
			each date in dates
				li= date.date
	script(src='scripts/calendar.js')
	.container
		form(action="/period", method="POST")
			p Choose period
			input(name="date_from",type="text",value="From",onfocus="this.select();lcs(this)",onclick="event.cancelBubble=true;this.select();lcs(this)")
			input(name="date_to",type="text",value="To",onfocus="this.select();lcs(this)",onclick="event.cancelBubble=true;this.select();lcs(this)")
			input(type='submit',value='Submit')
